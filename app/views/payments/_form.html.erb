      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row"> 
    <%= form.label :documento_id,"NÃºmero de control",class:'col-sm-2' %>
