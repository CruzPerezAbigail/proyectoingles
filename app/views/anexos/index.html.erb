 <head>
<%= stylesheet_link_tag "style copy" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">anexo</a></li>
          <li class="breadcrumb-item active">Listar anexos</li>
        </ol>
<h4>Anexos</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tabladocumentos">
                  <thead class="thead-blue" >
                    
                  <tr>
                
                  <th scope="col">ID</th>
                  <th>Nombre</th>
                  <th>Numero de control</th>
                  
                   </tr>
              </thead>

  <% @anexos.each do |anexo| %>
      <tr>
                    <td></td>
                    <td><%= anexo.id %></td>
                    <td><%= anexo.titulo %></td>
                    
                    <td><% anexo.uploads.each do |adjunto| %>
                          <p><%= adjunto.filename.to_s %></p>
                          <p><%= link_to 'Descargar', rails_blob_path(adjunto.blob, disposition: 'attachment') %></p>
                        <% end %></td>
                    <td>
    <p>
      <%= link_to "Show this anexo", anexo %>
    </p>
  <% end %>
</div>

<%= link_to "New anexo", new_anexo_path %>
